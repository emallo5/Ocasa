<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BarActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SlideDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="PickerDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="Input">
        <item name="android:textColor">@color/ocasaTextColor</item>
        <item name="android:textColorHint">@color/ocasaHintColor</item>
        <item name="android:background">@drawable/input_backgroud</item>
        <item name="android:padding">@dimen/large_padding</item>
    </style>

    <style name="InputForm">
        <item name="android:textColor">@color/ocasaTextColor</item>
        <item name="android:textColorHint">@color/ocasaHintColor</item>
        <item name="android:background">@drawable/input_backgroud</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
    </style>

</resources>