<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.ocasa">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:name=".OcasaApplication"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDRfW86tTw956qsnm12EOYMrwIYDb_sqow"/>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ForgotPassWordActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LoginActivity" />
        </activity>

        <activity
            android:name=".activity.HomeActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <activity
            android:screenOrientation="portrait"
            android:name=".activity.ReadFieldActvivity"/>

        <activity
            android:name=".activity.DetailRecordActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity" />
        </activity>

        <activity android:name=".activity.CreateReceiptActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity" />
        </activity>

        <activity android:name=".activity.DetailReceiptActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity" />
        </activity>

        <activity android:name=".activity.UpdateReceiptItemActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.CreateReceiptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.CreateReceiptActivity" />
        </activity>

        <activity android:name=".activity.DetailReceiptItemActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.DetailReceiptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DetailReceiptActivity" />
        </activity>

        <activity android:name=".activity.AddItemsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.CreateReceiptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.CreateReceiptActivity" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activity.EditReceiptActivity"
            android:parentActivityName=".activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activity.ReceiptStatusActvity"
            android:parentActivityName=".activity.CreateReceiptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.CreateReceiptActivity" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activity.DetailReceiptStatusActivity"
            android:parentActivityName=".activity.DetailReceiptActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DetailReceiptActivity" />
        </activity>


        <activity
            android:theme="@style/FilterTheme"
            android:name=".activity.FilterActivity"/>

        <activity
            android:theme="@style/FilterTheme"
            android:name=".activity.ValidityDateActivity"/>

        <!--- PICK UP -->

        <activity
            android:name=".pickup.LocationsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".pickup.SyncPickupItemsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".pickup.PickupActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".pickup.LocationsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".pickup.LocationsActivity" />
        </activity>

        <activity
            android:name=".pickup.scanner.ScannerActivity"
            android:screenOrientation="portrait"/>

        <receiver android:name=".pickup.SyncPickupItemsActivity$SyncReceiver"/>

        <!--  - - - -  -->

        <service android:name=".sync.SyncService"/>
        <service android:name=".sync.LoginService"/>
        <service android:name=".sync.SendService"/>

        <receiver android:name=".fragment.LoginFragment$LoginReceiver"/>
        <receiver android:name=".fragment.SyncFragment$SyncReceiver"/>
        <receiver android:name=".fragment.HomeFragment$RecordSyncReceiver"/>

        <receiver android:name=".receiver.RequestTableReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.android.ocasa.service.DOWNLOAD_TABLE_REQUEST"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
