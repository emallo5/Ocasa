<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/read_tags_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ll_actions"
        android:layout_toStartOf="@+id/ll_actions">
    </TextView>

    <EditText
        android:id="@+id/et_input"
        android:hint="Ingrese cÃ³digo..."
        android:textColor="@android:color/black"
        android:textColorHint="@color/ocasaLightGray"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:background="#ffffff"
        android:layout_marginTop="32dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ll_actions"
        android:layout_toStartOf="@+id/ll_actions"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_marginTop="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/read_qr"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_qr"
            android:clickable="true"
            android:background="?android:selectableItemBackground" />

    </LinearLayout>

</merge>