<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BarActivityTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/ocasaLightGray</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/ocasaLightBlue</item>
        <item name="colorAccent">@color/ocasaLightBlue</item>
        <item name="android:textColorSecondary">@color/ocasaLightBlue</item>
        <item name="navBarIcon">@null</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_menu_clear</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/ocasaLightBlue</item>
        <item name="titleTextStyle">@style/ActionModeText</item>
    </style>

    <style name="ActionModeText" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FilterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/ocasaLightGray</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/ocasaLightBlue</item>
        <item name="colorPrimaryDark">@color/ocasaLightBlue</item>
        <item name="colorAccent">@color/ocasaLightBlue</item>
    </style>

    <style name="Input">
        <item name="android:textColor">@color/ocasaTextColor</item>
        <item name="android:textColorHint">@color/ocasaHintColor</item>
        <item name="android:background">@drawable/input_backgroud</item>
        <item name="android:padding">@dimen/large_padding</item>
    </style>

    <style name="InputForm">
        <item name="android:textColor">@color/ocasaTextColor</item>
        <item name="android:textColorHint">@color/ocasaHintColor</item>
        <item name="android:background">@drawable/input_backgroud</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
    </style>

</resources>
